FloatLayout:
    MainLayout:
        size: root.width, root.height-35
        GridLayout:
            id: place_for_graph
            size: root.width-2, root.height-35
            size_hint: None, None
            orientation: "tb-lr"
            rows: 2
            cols: 2
    AppMenuALayout:
        id: anchor_main_menu
        anchor_y: 'top'
        MainMenu:
            orientation: 'tb-lr'
            cancel_handler_widget: anchor_main_menu
            AppMenuTextItem:
                text: "FILE"
                FileMenu:
                    ContextMenuTextItem:
                        text: "Open audio file"
                        on_release: self.parent.load_audio_from_file()
                    ContextMenuTextItem:
                        text: "Save processed file."
                        on_release: self.parent.save_audio()
                    ContextMenuTextItem:
                        text: "Check progress in processing"
                        on_release: self.parent.processing_view_window()
                    ContextMenuDivider:
                    ContextMenuTextItem:
                        text: "Exit"
                        on_release: self.parent.exit()
            AppMenuTextItem:
                text: ""
                id: dynamic_menu
